= simple_form_for [ :backend, @location, @fitness_camp ], :wrapper => :inline do |f|
  %fieldset
    = f.input :title
    = f.input :session_start_date, :input_html => { :class => 'datepicker' }
    = f.input :session_end_date, :input_html => { :class => 'datepicker' }
    = f.input :session_active, as: :boolean
    = f.input :description, as: :text
  .actions
    = f.submit 'Save'
