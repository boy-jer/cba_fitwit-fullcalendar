- content_for :header do
  %h1 User Management

%ul.tabs
  %li.active= link_to "Index", "#"
  %li= link_to "New", new_resource_path

%table
  %tr
    %th Name
    %th Membership Status
    %th Location
    %th

  - @users.each do |resource|
    %tr
      %td= link_to resource.certain_name, resource_path(resource)
      %td= resource.member
      %td= resource.location.nil? ? 'none' : resource.location.name

      %td.row-actions
        = link_to 'edit', edit_resource_path(resource)
        |
        = link_to 'destroy', resource_path(resource), method: :delete, confirm: "Are you sure?"
