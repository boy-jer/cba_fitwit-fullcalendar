- content_for :header do
  %h1= resource_class.model_name.human(count: 2)

%ul.tabs
  %li.active= link_to "Index", "#"
  %li= link_to "New", new_resource_path

%table.zebra-striped
  %tr
    %th Name
    %th Fitness Camps
    %th

  - @locations.each do |resource|
    %tr
      %td
        = link_to resource.name, resource_path(resource)
      %td
        - c = resource.fitness_camps.size
        = link_to "#{c} camp#{c > 1 ? 's' : ''}", backend_location_fitness_camps_path(resource)
      %td.row-actions
        = link_to 'edit', edit_resource_path(resource)
        |
        = link_to 'destroy', resource_path(resource), method: :delete, confirm: "Are you sure?"
