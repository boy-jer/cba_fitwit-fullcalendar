<div style="width:100%; position:relative;">
  <%= image_tag "headers/h1_loginsuccess.jpg" %>


  <div style="position:absolute; top:0; right:0; padding-top:10px; width:600px;text-align:right;">
    Welcome <%= @user.first_name %>, this is your <%= @user.number_of_logins.ordinalize %> login to FitWit.com.
    <% if admin? %>
        <hr />
        <div style="text-align:left; font-style:italic; color:#777;">
          ... and a special welcome to <b>you</b>. As a <%= @user.roles.map { |r| r.name }.to_sentence %>, you have permission to view
          the <%= link_to "Administration Section", :controller => "admin" %>.
        </div>
    <% end %>
  </div>
</div>

<% if active_membership? %>

    <p> You are currently an <b>active member</b> entitled to unlimited
      fitness camp participation. (You Rock.)</p>

<% end -%>

<ul id="welcome_screen" style="padding-bottom:80px;">
  <li><%= link_to image_tag('my_fit_wit/Community.png'), :controller=> 'base', :action => 'community' %></li>
  <li><%= link_to image_tag('my_fit_wit/MyFitWit.png'), :controller => 'my_fit_wit', :action => 'index' %></li>
  <li><%= link_to image_tag('my_fit_wit/Register.png'), :controller => 'registration', :action => 'all_fitness_camps' %></li>
</ul>


