= form_for @time_slot do |f|
  -if @time_slot.errors.any?
    #error_explanation
      %h2= "#{pluralize(@time_slot.errors.count, "error")} prohibited this time_slot from being saved:"
      %ul
        - @time_slot.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :start_time
    = f.time_select :start_time
  .field
    = f.label :end_time
    = f.time_select :end_time
  .field
    = f.label :sold_out
    = f.check_box :sold_out
  .actions
    = f.submit 'Save'
