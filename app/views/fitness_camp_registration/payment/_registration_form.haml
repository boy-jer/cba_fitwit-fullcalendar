= form_for :credit_card, :url => {:action => 'pay', :id => params[:id]} do |f|
  %ul
    %li= desc_label(f,:first_name,'First Name:') +               |
        f.text_field(:first_name, :value => @user.first_name) |
    %li= desc_label(f,:last_name,'Last Name:') +               |
        f.text_field(:last_name, :value => @user.last_name) |
    / begin address
    %li
      = desc_label(f,:address,'Billing Address:',true)
      #address.address
        %div
          = text_field_tag('billing_address[address1]', @user.street_address1, :class => "full") + |
            f.label(:street_address1,"Street Address")                                               |
        %div
          = text_field_tag('billing_address[address2]', @user.street_address2, :class => "full") + |
            f.label(:street_address2,"Street Address (cont)")                                        |
        %div
          %span
            / City !
            = text_field_tag('billing_address[city]', @user.city, :size => '22') + |
              f.label(:city, "City")                                                 |
          %span
            / State !
            = text_field_tag('billing_address[us_state]', |
              @user.us_state, :size => 2) +             |
              f.label(:us_state, "State")                 |
          / Zip !
          %span
            = text_field_tag('billing_address[zip]', @user.zip, :size => 10) + |
              f.label(:zip, "Zip")                                               |
    / end address
    %li
      = desc_label(f,:number,'Credit Card Number:')
      %span
        = f.text_field(:number) +                               |
          label(:number, :description, "(No spaces or dashes)") |
    %li
      = desc_label(f,:month,'Expiration Date:')
      %span
        = f.text_field(:month, :size => 2) + |
          label(:credit_card, :month, "MM")  |
      %span
        = f.text_field(:year, :size => 4) +   |
          label(:credit_card, :month, "YYYY") |
    %li= desc_label(f,:number,'Type:') +    |
        f.select(:type, Order::card_types) |
    %li= desc_label(f,:this_submit,'Â ',false) +    |
        f.submit('Submit Payment', :class => "button") |