- title "View Cart: Registration Step 2 of 6"

- present @cart do |cart_presenter|

  - content_for :right_column do
    = cart_presenter.show_cart
  #cart_information_region
    #vet_status_changer
      = cart_presenter.fit_wit_history(@user)
    #membership_region
      - unless @cart.new_membership
        = cart_presenter.show_regular_info
      - else
        %p
          Congratulations on your selection of a FitWit membership!
        %p
          In addition to your new membership, you are registering for the
          following classes:

  #cart_contents_region
    = form_tag :action => 'add_discounts' do
      = cart_presenter.show_camps(@cart.items)
      %p
        \
      = submit_tag 'Proceed to health consent', :class => 'small-btn glass-btn'

