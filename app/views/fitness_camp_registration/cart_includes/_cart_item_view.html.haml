- camp_cost = fitness_camp_price(@vet_status,cart_item_view, @user.has_active_subscription)
/ this needs a presenter !!!!!!!
.info_box.info_box1.rounded
  / camp title
  .title_box{style: "background-color: white; border:1px solid #cfcfcf;"}
    %h4{style: "color:black;"}= cart_item_view.title_with_camp_dates
  #price_info
    - if true # membership
      = render :membership_price_screen
    - else # they are signing up for a camp
      - case @status
        - when :vet
          - if @pay_by_session
            = render :pay_by_session_form
          - else # pay for camp
            = render :coupon_discount_form
            = render :friend_discount_form
        - when :supervet
          - if @pay_by_session
            = render :pay_by_session_form
          - else # pay for camp
            = render :coupon_discount_form
        - when :newbie
          = render :coupon_discount_form
          = render :friend_discount_form