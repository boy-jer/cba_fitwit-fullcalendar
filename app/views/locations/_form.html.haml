= form_for @location do |f|
  -if @location.errors.any?
    #error_explanation
      %h2= "#{pluralize(@location.errors.count, "error")} prohibited this location from being saved:"
      %ul
        - @location.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :directions
    = f.text_field :directions
  .field
    = f.label :contact_info
    = f.text_field :contact_info
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :created_at
    = f.datetime_select :created_at
  .field
    = f.label :updated_at
    = f.datetime_select :updated_at
  .field
    = f.label :franchise_id
    = f.number_field :franchise_id
  .field
    = f.label :us_state
    = f.text_field :us_state
  .field
    = f.label :short_description
    = f.text_field :short_description
  .field
    = f.label :zip
    = f.text_field :zip
  .field
    = f.label :street_address
    = f.text_field :street_address
  .field
    = f.label :lat
    = f.text_field :lat
  .field
    = f.label :lon
    = f.text_field :lon
  .actions
    = f.submit 'Save'
