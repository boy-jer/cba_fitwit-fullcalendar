<%= render :partial => 'my_fit_wit/includes/my_fit_wit_nav', :locals => {:format_class => 'progress'}  %>

<h1>Workout details for <%= @exercise.name %> on <%= @the_date %></h1>

<h2 style="display:inline">Your score:</h2>
<span style="padding:5px; margin-left:20px; font-weight:bold;"><%= @exertion.score %></span><br/>
<%= @exertion.notes.empty? ? "" : "<h2>Note: </h2>" + @exertion.notes + "<br />" %>

<div id="accordion">
  <h3><a href="#">Personal Progress</a></h3>

  <div>
    <%= @other_scores %>
  </div>
  <h3><a href="#">Other camper's in your time slot on <%= @the_date %></a></h3>

  <div>
    <% unless @other_folks_exertions.empty? %>
        <div style="height:200px; overflow:auto;">
          <table style="width:100%; border:1px solid gray;">
            <% @other_folks_exertions.each do |e| %>
                <tr class="<%= cycle('light', 'dark') %>">
                  <td><%= e.first_name + " " + e.last_name %></td>
                  <td><%= e.score %></td>
                  <td><%= image_tag("rx.gif") if e.rxd %></td>                  
                </tr>
            <% end %>
          </table>
        </div>
    <% else %>
        <p>You were the only camper at this meeting to do a <%= @exercise.name %></p>
    <% end %>

  </div>
  <h3><a href="#">Other camper's that day</a></h3>

  <div>
    <% unless @workouts_that_day.empty? %>
        <div style="height:200px; overflow:auto;">
          <table style="width:100%; border:1px solid gray;">
            <% @workouts_that_day.each do |e| %>
                <tr class="<%= cycle('light', 'dark') %>">
                  <td><%= e.first_name + " " + e.last_name %></td>
                  <td><%= e.score %></td>
                  <td><%= image_tag("rx.gif") if e.rxd %></td>
                </tr>
            <% end %>
          </table>
        </div>
    <% else %>
        <p>You were the only camper at this meeting to do a <%= @exercise.name %></p>
    <% end %>
  </div>
  <h3><a href="#">All time leader board</a></h3>
  <div>
    <%= render :partial => 'my_fit_wit/includes/leader_board', :locals => {:leaders => @leaders} %>
  </div>
</div>

<%= link_to "Back to calendar", {:action => :fit_wit_workout_progress, :month => @exertion.meeting.meeting_date.strftime('%b-%Y')} %>
